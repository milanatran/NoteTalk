<h1>User Data for <%= user.name %></h1>

<%- include ("../chatrooms/_chatroomsModal.ejs") %>

<table class="table">
 <tr>
   <th>Name</th>
   <td><%= user.name %></td>
 </tr>
 <tr>
   <th>Email</th>
   <td><%= user.email %></td>
 </tr>
 <tr>
   <td>
     <a href="<%=`/users/${user._id}/edit` %>">
     Edit
    </a>
    </td>
   </tr>
  <tr>
   <td>
  <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"onclick="return confirm('Are you sure you want to delete this record?')">
    Delete</a>
 </td>
 <td>
     <a href="<%= `/users/${user._id}/invite` %>" target="_blank">Profile</a>
   </td>
 </tr>
</table>

<table class="table">
 <thead>
   <tr>
     <th>Chatrooms</th>
   </tr>
 </thead>
 <tbody>
   <% user.chatrooms.forEach(chatroom => { %>
     <tr>
      <td><%= chatroom.title %></td>
     </tr>
   <% }); %>
 </tbody>
</table>
